# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development

# Database
DB_DRIVER=sqlite
DB_PATH=./data/vps-panel.db
# DB_DRIVER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=vps_panel
# DB_USER=postgres
# DB_PASSWORD=password

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# Redis (for queue/background jobs)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Caddy Configuration
CADDY_CONFIG_PATH=/etc/caddy/sites
CADDY_RELOAD_CMD=systemctl reload caddy

# Deployment Settings
PROJECTS_DIR=./data/projects
BUILD_TIMEOUT=600
MAX_CONCURRENT_BUILDS=3

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin Settings
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# GitHub OAuth (for seamless repo import like Vercel)
# Get these from: https://github.com/settings/developers
# Create a new OAuth App with callback: http://localhost:8080/api/v1/auth/oauth/callback/github
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_CALLBACK_URL=http://localhost:8080/api/v1/auth/oauth/callback
CORS_ORIGINS=http://localhost:5173,http://localhost:4173
